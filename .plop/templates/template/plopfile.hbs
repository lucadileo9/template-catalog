// Questo file configura Plop per generare componenti specifici per il template.
const generateComponent = require("../../../.plop/generators/component");

module.exports = function (plop) {
  // Generatore di componenti per il template
  plop.setGenerator("component", {
    ...generateComponent,
    actions: generateComponent.actions.map((action) => {
      if (action.type === "add") {
        // Modifica il percorso per puntare alla cartella components del template corrente
        action.path = action.path.replace("./app/components", "./components");
      }
      return action;
    }),
  });
};