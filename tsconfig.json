{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@pizzeria/*": ["templates/pizzeria-template/*"], // Risorse del template pizzeria
      "@estetista/*": ["templates/estetista-template/*"], // Risorse del template estetista

      "@app/*": ["app/*"], // File globali dell'app
      "@global-ui/*": ["components/ui/*"], // Componenti UI globali (ShadCN)
      "@global-utils/*": ["components/utils/*"], // Utility globali
      "@global-lib/*": ["components/lib/*"], // Librerie globali
      "@global-atoms/*": ["components/atoms/*"], // Atomi globali
      "@global-molecules/*": ["components/molecules/*"], // Molecole globali
      "@global-organisms/*": ["components/organisms/*"], // Organismi globali
      "@public/*": ["public/*"], // Asset statici globali
      "@templates/*": ["templates/*"], // Template globali



    }
  },
"include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  ".next/types/**/*.ts",
  "templates/**/*"
],  "exclude": ["node_modules"]
}
